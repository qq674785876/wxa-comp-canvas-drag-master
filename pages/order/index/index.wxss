/* pages/order/index/index.wxss */
.addr-box{
  width: 100%;
}
.addr-list{
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #000;
  background-color: #fff;
  position: relative;
  margin-bottom: 20rpx;
}
.addr-list .iconshouhuodizhi{
  position: absolute;
  font-size: 40rpx;
  top: 50rpx;
  color: #333;
} 
.addr-list .iconiconzhengli-{
  position: absolute;
  font-size: 60rpx;
  top: 50rpx;
  right: 20rpx;
  color: #ccc;
}
.addr-list.active .iconshouhuodizhi{
  color: coral;
}
.addr-list .name,.addr-list .phone{
  float: left;
  padding: 30rpx 0 20rpx;
  width: 50%;
}
.addr-list .info-box{
  padding: 0 0 0 80rpx;
}
.addr-list .name{
  width: calc(50% - 30rpx);
  padding-right: 30rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #333;
}
.addr-list .addr{
  color: #ccc;
  display: block;
  padding-bottom: 30rpx;
}


.goods-box{
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.goods-box image{
  height: calc(100vw * .2);
  width: 20%;
}
.goods-box text{
  float: right;
  line-height: calc(100vw * .2);
  color: #ccc;
  font-size: 36rpx;
}


.order-box{
  font-size: 32rpx;
  background: #fff;
  padding: 30rpx;
}
.order-box .price{
  float: right;
}
.coral{
  color: coral;
}
.btn-box{
  width: calc(100% - 60rpx);
  position: absolute;
  background: #fff;
  bottom: 0;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
}
.btn-box > text{
  line-height: 60rpx;
}
.btn-box .btn{
  float: right;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background: coral;
  color: #fff;
  font-size: 30rpx;
}